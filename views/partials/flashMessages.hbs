{{#if success}}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      M.toast({
        html: '{{success}}',
        classes: 'green darken-2 white-text',
        displayLength: 4000
      });
    });
  </script>
{{/if}}

{{#if error}}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      M.toast({
        html: '{{error}}',
        classes: 'red darken-2 white-text',
        displayLength: 5000
      });
    });
  </script>
{{/if}}
