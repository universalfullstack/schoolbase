<div class="container py-5 text-center">
  <!-- Broken link icon -->
  <div class="mb-4 text-muted">
    <i class="bi bi-link-45deg" style="font-size: 4rem;"></i>
  </div>

  <!-- Error code -->
  <h1 class="display-4 fw-semibold text-secondary mb-2">
    404
  </h1>

  <!-- Title -->
  <h4 class="fw-normal mb-3 text-dark">
    {{title}}
  </h4>

  <!-- Direct message -->
  <p class="text-muted mb-4">
    {{message}}  
    This link doesn’t point to anything anymore — it may be outdated, mistyped,
    or no longer available.
  </p>

  <!-- Actions -->
  <div class="d-flex justify-content-center gap-3 flex-wrap">
    <a href="{{backUrl}}" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i>
      Go back
    </a>

    <!-- Disabled-looking links -->
    <a href="#" class="btn btn-link text-muted disabled">
      <i class="bi bi-house-door me-1"></i>
      Home
    </a>

    <a href="#" class="btn btn-link text-muted disabled">
      <i class="bi bi-life-preserver me-1"></i>
      Help
    </a>
  </div>

  <!-- Footer hint -->
  <div class="mt-5 text-muted small">
    <i class="bi bi-exclamation-circle me-1"></i>
    If this keeps happening, please contact your system administrator.
  </div>
</div>
