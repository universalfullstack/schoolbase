<div class="container-fluid py-4">

  <!-- ================= PAGE HEADER ================= -->
  <div class="mb-4">
    <h1 class="h3 fw-semibold mb-1">{{user.role}} Dashboard</h1>
    <p class="text-muted mb-0">System overview and activity summary</p>
  </div>

  {{#unless user.emailVerified}}
    <div class="alert alert-warning d-flex align-items-center mb-4">
      <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
      <span>Email not verified. Please verify to unlock all features.</span>
    </div>
  {{/unless}}

  <!-- ================= STATISTICS ================= -->
  <section class="mb-5">
    <div class="row g-3">

      <!-- Schools -->
      <div class="col-sm-6 col-lg-3">
        <div class="card border-0 shadow-sm bg-primary bg-opacity-10 h-100">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <div class="small text-muted mb-1">Schools</div>
              <div class="fs-3 fw-bold text-primary">
                {{stats.totalSchools}}
              </div>
            </div>
            <i class="bi bi-building fs-1 text-primary opacity-75"></i>
          </div>
        </div>
      </div>

      <!-- School Admins -->
      <div class="col-sm-6 col-lg-3">
        <div class="card border-0 shadow-sm bg-warning bg-opacity-10 h-100">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <div class="small text-muted mb-1">School Admins</div>
              <div class="fs-3 fw-bold text-warning">
                {{stats.totalSchoolAdmins}}
              </div>
            </div>
            <i class="bi bi-person-badge fs-1 text-warning opacity-75"></i>
          </div>
        </div>
      </div>

      <!-- Staff -->
      <div class="col-sm-6 col-lg-3">
        <div class="card border-0 shadow-sm bg-secondary bg-opacity-10 h-100">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <div class="small text-muted mb-1">Staff</div>
              <div class="fs-3 fw-bold text-secondary">
                {{stats.totalStaff}}
              </div>
            </div>
            <i class="bi bi-people fs-1 text-secondary opacity-75"></i>
          </div>
        </div>
      </div>

      <!-- Students -->
      <div class="col-sm-6 col-lg-3">
        <div class="card border-0 shadow-sm bg-info bg-opacity-10 h-100">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <div class="small text-muted mb-1">Students</div>
              <div class="fs-3 fw-bold text-info">
                {{stats.totalStudents}}
              </div>
            </div>
            <i class="bi bi-mortarboard fs-1 text-info opacity-75"></i>
          </div>
        </div>
      </div>

      <!-- Active Subscriptions -->
      <div class="col-sm-6 col-lg-3">
        <div class="card border-0 shadow-sm bg-success bg-opacity-10 h-100">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <div class="small text-muted mb-1">Active Subscriptions</div>
              <div class="fs-3 fw-bold text-success">
                {{stats.totalSubscriptions}}
              </div>
            </div>
            <i class="bi bi-card-checklist fs-1 text-success opacity-75"></i>
          </div>
        </div>
      </div>

      <!-- Total Revenue -->
      <div class="col-sm-6 col-lg-3">
        <div class="card border-0 shadow-sm bg-dark bg-opacity-10 h-100">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <div class="small text-muted mb-1">Total Revenue</div>
              <div class="fs-3 fw-bold text-dark">
                â‚¦{{stats.totalRevenue}}
              </div>
            </div>
            <i class="bi bi-cash-coin fs-1 text-dark opacity-75"></i>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- ================= CHARTS ================= -->
  <section class="mb-5">
    <div class="row g-3">

      <!-- Subscription Trend -->
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-transparent border-0 pb-0">
            <h5 class="fw-semibold mb-0">
              <i class="bi bi-graph-up me-2 text-success"></i>
              Subscription Trend
            </h5>
            <small class="text-muted">Last 6 months</small>
          </div>
          <div class="card-body">
            <canvas id="subscriptionTrendChart" height="120"></canvas>
          </div>
        </div>
      </div>

      <!-- Subscription Status -->
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-transparent border-0 pb-0">
            <h5 class="fw-semibold mb-0">
              <i class="bi bi-pie-chart me-2 text-primary"></i>
              Subscription Status
            </h5>
            <small class="text-muted">Distribution by status</small>
          </div>
          <div class="card-body">
            <canvas id="subscriptionStatusChart" height="120"></canvas>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- ================= LATEST SUBSCRIPTIONS ================= -->
  <section>
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-transparent border-0 pb-0">
        <h5 class="fw-semibold mb-0">
          <i class="bi bi-clock-history me-2 text-primary"></i>
          Latest Subscriptions
        </h5>
      </div>

      <div class="card-body pt-2">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light small text-uppercase">
              <tr>
                <th>School</th>
                <th>Plan</th>
                <th>Start</th>
                <th>End</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              {{#each latestSubscriptions}}
                <tr>
                  <td class="fw-medium">{{this.school}}</td>
                  <td>{{this.plan}}</td>
                  <td>{{this.startDate}}</td>
                  <td>{{this.endDate}}</td>
                  <td>
                    {{#if (eq this.status "active")}}
                      <span class="badge bg-success">Active</span>
                    {{else if (eq this.status "expired")}}
                      <span class="badge bg-danger">Expired</span>
                    {{else if (eq this.status "pending")}}
                      <span class="badge bg-warning text-dark">Pending</span>
                    {{else}}
                      <span class="badge bg-secondary">Cancelled</span>
                    {{/if}}
                  </td>
                </tr>
              {{else}}
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">
                    No subscriptions yet
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

</div>

{{#section "scripts"}}
<!-- ================= CHART.JS ================= -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>

<script>
  const trendLabels  = {{{trendLabels}}};
  const trendData    = {{{trendData}}};
  const statusLabels = {{{statusLabels}}};
  const statusData   = {{{statusData}}};

  /* ================= Subscription Trend ================= */
  new Chart(document.getElementById('subscriptionTrendChart'), {
    type: 'line',
    data: {
      labels: trendLabels,
      datasets: [{
        label: 'New Subscriptions',
        data: trendData,
        borderColor: '#198754',              // Bootstrap success
        backgroundColor: 'rgba(25,135,84,.15)',
        borderWidth: 2,
        fill: true,
        tension: 0.4,
        pointRadius: 3,
        pointBackgroundColor: '#198754'
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: { display: false },
        tooltip: {
          backgroundColor: '#212529',
          titleColor: '#fff',
          bodyColor: '#dee2e6'
        }
      },
      scales: {
        x: {
          grid: { display: false }
        },
        y: {
          beginAtZero: true,
          grid: { color: 'rgba(0,0,0,.05)' }
        }
      }
    }
  });

  /* ================= Subscription Status ================= */
  new Chart(document.getElementById('subscriptionStatusChart'), {
    type: 'doughnut',
    data: {
      labels: statusLabels.map(s => s.charAt(0).toUpperCase() + s.slice(1)),
      datasets: [{
        data: statusData,
        backgroundColor: [
          '#198754', // Active
          '#dc3545', // Expired
          '#ffc107', // Pending
          '#6c757d'  // Cancelled
        ],
        borderWidth: 0
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      cutout: '65%',
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            usePointStyle: true,
            padding: 16
          }
        }
      }
    }
  });
</script>
{{/section}}