<div class="container-fluid py-4">

  <!-- Greeting -->
  <div class="mb-4">
    <h1 class="h3">{{user.role}} Dashboard</h1>
    {{#unless user.emailVerified}}
      <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>Email not verified</div>
      </div>
    {{/unless}}
  </div>

  <!-- Stat cards -->
  <div class="row g-3 mb-4">
    <!-- Schools -->
    <div class="col-6 col-md-3">
      <div class="card text-white bg-primary shadow-sm p-3 h-100">
        <div class="d-flex align-items-center">
          <div>
            <small>Schools</small>
            <h4>{{stats.totalSchools}}</h4>
          </div>
        </div>
      </div>
    </div>

    <!-- School Admins -->
    <div class="col-6 col-md-3">
      <div class="card text-white bg-warning shadow-sm p-3 h-100">
        <div class="d-flex align-items-center">
          <div>
            <small>School Admins</small>
            <h4>{{stats.totalSchoolAdmins}}</h4>
          </div>
        </div>
      </div>
    </div>

    <!-- Staff -->
    <div class="col-6 col-md-3">
      <div class="card text-white bg-purple shadow-sm p-3 h-100">
        <div class="d-flex align-items-center">
          <div>
            <small>Staff</small>
            <h4>{{stats.totalStaff}}</h4>
          </div>
        </div>
      </div>
    </div>

    <!-- Students -->
    <div class="col-6 col-md-3">
      <div class="card text-white bg-info shadow-sm p-3 h-100">
        <div class="d-flex align-items-center">
          <div>
            <small>Students</small>
            <h4>{{stats.totalStudents}}</h4>
          </div>
        </div>
      </div>
    </div>

    <!-- Active Subscriptions -->
    <div class="col-6 col-md-3">
      <div class="card text-white bg-success shadow-sm p-3 h-100">
        <div class="d-flex align-items-center">
          <div>
            <small>Active Subscriptions</small>
            <h4>{{stats.totalSubscriptions}}</h4>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Revenue -->
    <div class="col-6 col-md-3">
      <div class="card text-white bg-teal shadow-sm p-3 h-100">
        <div class="d-flex align-items-center">
          <div>
            <small>Total Revenue</small>
            <h4>â‚¦{{stats.totalRevenue}}</h4>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts -->
  <div class="row g-3 mb-4">
    <div class="col-12 col-lg-6">
      <div class="card p-3 shadow-sm">
        <h5>Subscription Trend (Last 6 Months)</h5>
        <canvas id="subscriptionTrendChart"></canvas>
      </div>
    </div>

    <div class="col-12 col-lg-6">
      <div class="card p-3 shadow-sm">
        <h5>Subscriptions by Status</h5>
        <canvas id="subscriptionStatusChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Latest subscriptions table -->
  <div class="card shadow-sm p-3">
    <h5 class="mb-3">Latest Subscriptions</h5>
    <div class="table-responsive">
      <table class="table table-sm table-hover">
        <thead>
          <tr>
            <th>School</th>
            <th>Plan</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each latestSubscriptions}}
          <tr>
            <td>{{this.school}}</td>
            <td>{{this.plan}}</td>
            <td>{{this.startDate}}</td>
            <td>{{this.endDate}}</td>
            <td>
              {{#if (eq this.status "active")}}
                <span class="badge bg-success">Active</span>
              {{else if (eq this.status "expired")}}
                <span class="badge bg-danger">Expired</span>
              {{else if (eq this.status "pending")}}
                <span class="badge bg-warning text-dark">Pending</span>
              {{else}}
                <span class="badge bg-secondary">Cancelled</span>
              {{/if}}
            </td>
          </tr>
          {{else}}
          <tr><td colspan="5" class="text-muted">No subscriptions yet</td></tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

{{#section "styles"}}
<style>
  .bg-purple { background-color: #6f42c1 !important; }
  .bg-teal { background-color: #20c997 !important; }
</style>
{{/section}}

{{#section "scripts"}}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Parse JSON strings passed from controller
  const trendLabels  = {{{trendLabels}}};
  const trendData    = {{{trendData}}};
  const statusLabels = {{{statusLabels}}};
  const statusData   = {{{statusData}}};

  // ----------------- Subscription Trend Chart -----------------
  const ctxTrend = document.getElementById('subscriptionTrendChart').getContext('2d');
  new Chart(ctxTrend, {
    type: 'line',
    data: {
      labels: trendLabels,
      datasets: [{
        label: 'New Subscriptions',
        data: trendData,
        backgroundColor: 'rgba(54, 162, 235, 0.2)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 2,
        fill: true,
        tension: 0.4
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: true } },
      scales: { y: { beginAtZero: true } }
    }
  });

  // ----------------- Subscription Status Chart -----------------
  const ctxStatus = document.getElementById('subscriptionStatusChart').getContext('2d');
  new Chart(ctxStatus, {
    type: 'doughnut',
    data: {
      labels: statusLabels.map(s => s.charAt(0).toUpperCase() + s.slice(1)),
      datasets: [{
        data: statusData,
        backgroundColor: [
          '#198754', // active
          '#dc3545', // expired
          '#ffc107', // pending
          '#6c757d', // cancelled
        ]
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { position: 'bottom' } }
    }
  });
</script>
{{/section}}
