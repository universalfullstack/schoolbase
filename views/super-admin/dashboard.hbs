<div class="container-fluid">

  <!-- ================= Greeting ================= -->
  <div class="mb-4">
    <h1 class="display-6 fw-semibold">
      {{user.role}} Dashboard
    </h1>
  </div>

  {{#unless user.emailVerified}}
    <div class="alert alert-warning d-flex align-items-center mb-4">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      Email not verified
    </div>
  {{/unless}}

  <!-- ================= Stats ================= -->
  <div class="row g-3 mb-4">

    <!-- Schools -->
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card text-bg-primary h-100">
        <div class="card-body">
          <div class="small">Schools</div>
          <div class="fs-3 fw-bold">{{stats.totalSchools}}</div>
        </div>
      </div>
    </div>

    <!-- School Admins -->
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card text-bg-warning h-100">
        <div class="card-body">
          <div class="small">School Admins</div>
          <div class="fs-3 fw-bold">{{stats.totalSchoolAdmins}}</div>
        </div>
      </div>
    </div>

    <!-- Staff -->
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card text-bg-secondary h-100">
        <div class="card-body">
          <div class="small">Staff</div>
          <div class="fs-3 fw-bold">{{stats.totalStaff}}</div>
        </div>
      </div>
    </div>

    <!-- Students -->
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card text-bg-info h-100">
        <div class="card-body">
          <div class="small">Students</div>
          <div class="fs-3 fw-bold">{{stats.totalStudents}}</div>
        </div>
      </div>
    </div>

    <!-- Active Subscriptions -->
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card text-bg-success h-100">
        <div class="card-body">
          <div class="small">Active Subscriptions</div>
          <div class="fs-3 fw-bold">{{stats.totalSubscriptions}}</div>
        </div>
      </div>
    </div>

    <!-- Total Revenue -->
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card text-bg-dark h-100">
        <div class="card-body">
          <div class="small">Total Revenue</div>
          <div class="fs-3 fw-bold">â‚¦{{stats.totalRevenue}}</div>
        </div>
      </div>
    </div>

  </div>

  <!-- ================= Charts ================= -->
  <div class="row g-3 mb-4">

    <div class="col-12 col-lg-6">
      <div class="card h-100">
        <div class="card-body">
          <h6 class="card-title mb-3">
            Subscription Trend (Last 6 Months)
          </h6>
          <canvas id="subscriptionTrendChart"></canvas>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-6">
      <div class="card h-100">
        <div class="card-body">
          <h6 class="card-title mb-3">
            Subscriptions by Status
          </h6>
          <canvas id="subscriptionStatusChart"></canvas>
        </div>
      </div>
    </div>

  </div>

  <!-- ================= Latest Subscriptions ================= -->
  <div class="card">
    <div class="card-body">
      <h6 class="card-title mb-3">
        Latest Subscriptions
      </h6>

      <div class="table-responsive">
        <table class="table table-bordered align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>School</th>
              <th>Plan</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Status</th>
            </tr>
          </thead>

          <tbody>
            {{#each latestSubscriptions}}
              <tr>
                <td>{{this.school}}</td>
                <td>{{this.plan}}</td>
                <td>{{this.startDate}}</td>
                <td>{{this.endDate}}</td>
                <td>
                  {{#if (eq this.status "active")}}
                    <span class="badge bg-success">Active</span>
                  {{else if (eq this.status "expired")}}
                    <span class="badge bg-danger">Expired</span>
                  {{else if (eq this.status "pending")}}
                    <span class="badge bg-warning text-dark">Pending</span>
                  {{else}}
                    <span class="badge bg-secondary">Cancelled</span>
                  {{/if}}
                </td>
              </tr>
            {{else}}
              <tr>
                <td colspan="5" class="text-center text-muted">
                  No subscriptions yet
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>
