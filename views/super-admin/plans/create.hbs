<div class="container py-4">

  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <div class="card shadow-sm">

        <div class="card-body">

          <h4 class="card-title text-center mb-4">Create Plan</h4>

          {{> flashMessages}}

          <form action="/super-admin/plans/create" method="POST">

            <!-- Plan Name -->
            <div class="mb-3">
              <label for="name" class="form-label">Plan Name</label>
              <input type="text" id="name" name="name" class="form-control" required
                     value="{{#if old.name}}{{old.name}}{{else}}Basic{{/if}}">
              <div class="form-text">
                Unique name for this plan (e.g., Basic, Pro, Enterprise).
              </div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" class="form-control" rows="3">{{#if old.description}}{{old.description}}{{else}}This is a basic plan.{{/if}}</textarea>
              <div class="form-text">
                Brief summary of the planâ€™s purpose or benefits.
              </div>
            </div>

            <!-- Price & Discount -->
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label for="price" class="form-label">Price</label>
                <input type="number" id="price" name="price" class="form-control" required
                       value="{{#if old.price}}{{old.price}}{{else}}1000{{/if}}">
                <div class="form-text">Cost of the plan in your currency (e.g., NGN).</div>
              </div>
              <div class="col-md-6">
                <label for="discount" class="form-label">Discount</label>
                <input type="number" id="discount" name="discount" class="form-control"
                       value="{{#if old.discount}}{{old.discount}}{{else}}0{{/if}}">
                <div class="form-text">Optional discount amount (0 if none).</div>
              </div>
            </div>

            <!-- Billing Cycle -->
            <div class="mb-3">
              <label for="billingCycle" class="form-label">Billing Cycle</label>
              <select id="billingCycle" name="billingCycle" class="form-select">
                <option value="monthly" {{#if old.billingCycle}}{{#ifCond old.billingCycle "monthly"}}selected{{/ifCond}}{{/if}}>Monthly</option>
                <option value="yearly" {{#if old.billingCycle}}{{#ifCond old.billingCycle "yearly"}}selected{{/ifCond}}{{/if}}>Yearly</option>
              </select>
              <div class="form-text">How often users are billed for this plan.</div>
            </div>

            <hr>

            <!-- Resource Limits -->
            <h6 class="text-muted mb-3">Resource Limits</h6>

            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label for="maxStudents" class="form-label">Max Students</label>
                <input type="number" id="maxStudents" name="maxStudents" class="form-control"
                       value="{{#if old.maxStudents}}{{old.maxStudents}}{{else}}0{{/if}}">
                <div class="form-text">0 = unlimited</div>
              </div>
              <div class="col-md-6">
                <label for="maxStaff" class="form-label">Max Staff</label>
                <input type="number" id="maxStaff" name="maxStaff" class="form-control"
                       value="{{#if old.maxStaff}}{{old.maxStaff}}{{else}}0{{/if}}">
                <div class="form-text">0 = unlimited</div>
              </div>
              <div class="col-md-6">
                <label for="maxClasses" class="form-label">Max Classes</label>
                <input type="number" id="maxClasses" name="maxClasses" class="form-control"
                       value="{{#if old.maxClasses}}{{old.maxClasses}}{{else}}0{{/if}}">
                <div class="form-text">0 = unlimited</div>
              </div>
              <div class="col-md-6">
                <label for="maxSections" class="form-label">Max Sections</label>
                <input type="number" id="maxSections" name="maxSections" class="form-control"
                       value="{{#if old.maxSections}}{{old.maxSections}}{{else}}0{{/if}}">
                <div class="form-text">0 = unlimited</div>
              </div>
            </div>

            <hr>

            <!-- Features -->
            <div class="mb-3">
              <label for="features" class="form-label">Features (one per line)</label>
              <textarea id="features" name="features" class="form-control" rows="3">{{#if old.features}}{{old.features}}{{else}}Messaging
Reports{{/if}}</textarea>
              <div class="form-text">List features separated by commas or one per line.</div>
            </div>

            <!-- Active -->
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" name="isActive" id="isActive" checked>
              <label class="form-check-label" for="isActive">Active</label>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-between">
              <a href="/super-admin/plans" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Create Plan
              </button>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>

</div>

{{#section "styles"}}
<!-- Optional Flatpickr Date Picker (for future use) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{{/section}}

{{#section "scripts"}}
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    flatpickr("input[type=date]", {
      dateFormat: "Y-m-d"
    });
  });
</script>
{{/section}}