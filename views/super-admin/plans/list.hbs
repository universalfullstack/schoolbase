<div class="container py-4">

  <!-- Header -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
    <h4 class="mb-3 mb-md-0">All Plans</h4>
    <a href="/super-admin/plans/create" class="btn btn-primary">
      <i class="bi bi-plus-lg me-1"></i> Add New Plan
    </a>
  </div>

  {{> flashMessages}}

  <!-- Plans Grid -->
  <div class="row g-4">
    {{#each plans}}
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">

        <div class="card-body d-flex flex-column">

          <!-- Card Header -->
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title mb-0">{{this.name}}</h5>
            {{#if this.isActive}}
              <span class="badge bg-success">Active</span>
            {{else}}
              <span class="badge bg-secondary">Inactive</span>
            {{/if}}
          </div>

          <!-- Price -->
          <p class="text-muted mb-2">
            <i class="bi bi-currency-dollar me-1"></i>
            <strong>{{this.price}}</strong>
            {{#if this.billingCycle}} / {{this.billingCycle}}{{/if}}
          </p>

          <!-- Description -->
          {{#if this.description}}
            <p class="text-muted mb-2">{{this.description}}</p>
          {{/if}}

          <!-- Features -->
          {{#if this.features}}
            <h6 class="mt-2">Features</h6>
            <ul class="list-unstyled mb-2">
              {{#each this.features}}
                <li>
                  <i class="bi bi-check-circle-fill text-success me-2"></i>{{this}}
                </li>
              {{/each}}
            </ul>
          {{/if}}

          <!-- Resource Limits -->
          <div class="mt-auto pt-2 border-top">
            <div class="d-flex justify-content-between">
              <span><i class="bi bi-people-fill me-1"></i>Students</span>
              <span>{{#if this.maxStudents}}{{this.maxStudents}}{{else}}Unlimited{{/if}}</span>
            </div>
            <div class="d-flex justify-content-between">
              <span><i class="bi bi-person-badge-fill me-1"></i>Staff</span>
              <span>{{#if this.maxStaff}}{{this.maxStaff}}{{else}}Unlimited{{/if}}</span>
            </div>
            <div class="d-flex justify-content-between">
              <span><i class="bi bi-building-fill me-1"></i>Classes</span>
              <span>{{#if this.maxClasses}}{{this.maxClasses}}{{else}}Unlimited{{/if}}</span>
            </div>
            <div class="d-flex justify-content-between">
              <span><i class="bi bi-grid-fill me-1"></i>Sections</span>
              <span>{{#if this.maxSections}}{{this.maxSections}}{{else}}Unlimited{{/if}}</span>
            </div>
          </div>

        </div>

        <!-- Actions -->
        <div class="card-footer bg-transparent border-top d-flex justify-content-between">
          <a href="/super-admin/plans/edit/{{this._id}}" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-pencil-fill me-1"></i>Edit
          </a>
          <form action="/super-admin/plans/delete/{{this._id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this plan?');">
            <button type="submit" class="btn btn-outline-danger btn-sm">
              <i class="bi bi-trash-fill me-1"></i>Delete
            </button>
          </form>
        </div>

      </div>
    </div>
    {{else}}
    <!-- Empty State -->
    <div class="col-12">
      <div class="alert alert-info text-center">
        No plans found. 
        <a href="/super-admin/plans/create" class="alert-link">Add a new plan</a>
      </div>
    </div>
    {{/each}}
  </div>

</div>
