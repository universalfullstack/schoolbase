<div class="container-fluid py-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Edit Subscription</h1>
    <a href="/super-admin/subscriptions" class="btn btn-secondary">Back to List</a>
  </div>

  {{> flashMessages}}

  <form action="/super-admin/subscriptions/edit/{{subscription._id}}" method="POST">
    <div class="row g-3">

      <!-- School Selection -->
      <div class="col-md-6">
        <label for="school" class="form-label">School <span class="text-danger">*</span></label>
        <select name="school" id="school" class="form-select">
          {{#each schools}}
            <option value="{{this._id}}" {{#if (eq this._id.toString ../subscription.school._id.toString)}}selected{{/if}}>
              {{this.name}}
            </option>
          {{/each}}
        </select>
      </div>

      <!-- Plan Selection -->
      <div class="col-md-6">
        <label for="plan" class="form-label">Plan <span class="text-danger">*</span></label>
        <select name="plan" id="plan" class="form-select" required>
          {{#each plans}}
            <option value="{{this._id}}" {{#if (eq this._id.toString ../subscription.plan._id.toString)}}selected{{/if}}>
              {{this.name}} ({{this.price}} {{../settings.general.currency}})
            </option>
          {{/each}}
        </select>
      </div>

      <!-- Payment Method -->
      <div class="col-md-6">
        <label for="paymentMethod" class="form-label">Payment Method <span class="text-danger">*</span></label>
        <select name="paymentMethod" id="paymentMethod" class="form-select" required>
          <option value="manual" {{#if (eq subscription.paymentMethod "manual")}}selected{{/if}}>Manual</option>
          <option value="card" {{#if (eq subscription.paymentMethod "card")}}selected{{/if}} disabled>Card</option>
          <option value="paypal" {{#if (eq subscription.paymentMethod "paypal")}}selected{{/if}} disabled>PayPal</option>
        </select>
      </div>

      <!-- Payer Email -->
      <div class="col-md-6">
        <label for="payerEmail" class="form-label">Payer Email</label>
        <input type="email" name="payerEmail" id="payerEmail" class="form-control" value="{{subscription.payerEmail}}">
      </div>

      <!-- End Date -->
      <div class="col-md-6">
        <label for="endDate" class="form-label">End Date <span class="text-danger">*</span></label>
        <input type="text" name="endDate" id="endDate" class="form-control" value="{{formatDate subscription.endDate 'YYYY-MM-DD'}}" required>
      </div>

      <!-- Auto Renew -->
      <div class="col-md-6 d-flex align-items-center mt-4">
        <div class="form-check">
          <input type="checkbox" name="autoRenew" id="autoRenew" class="form-check-input" {{#if subscription.autoRenew}}checked{{/if}}>
          <label for="autoRenew" class="form-check-label">Auto Renew</label>
        </div>
      </div>

      <!-- Notes -->
      <div class="col-12">
        <label for="notes" class="form-label">Notes</label>
        <textarea name="notes" id="notes" class="form-control" rows="3">{{subscription.notes}}</textarea>
      </div>

      <!-- Update Button Only -->
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Update Subscription</button>
      </div>

    </div>
  </form>
</div>

{{#section "styles"}}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{{/section}}

{{#section "scripts"}}
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  // Initialize Flatpickr on End Date field
  flatpickr("#endDate", {
    dateFormat: "Y-m-d",
    minDate: "today"
  });
</script>
{{/section}}
