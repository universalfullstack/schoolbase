<div class="container-fluid py-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Subscriptions</h1>
    <a href="/super-admin/subscriptions/create" class="btn btn-primary">Create New Subscription</a>
  </div>

  {{> flashMessages}}

  <table id="subscriptionTable" class="table table-striped table-bordered nowrap w-100 align-middle">
    <thead class="table-light">
      <tr>
        <th>School</th>
        <th>Plan</th>
        <th>Amount Paid</th>
        <th>Payment Method</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th style="width: 180px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each subscriptions}}
      <tr>
        <td>{{this.school.name}}</td>
        <td>{{this.plan.name}}</td>
        <td>{{this.amountPaid}} {{this.currency}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>{{formatDate this.startDate "YYYY-MM-DD"}}</td>
        <td>{{formatDate this.endDate "YYYY-MM-DD"}}</td>
        <td>
          {{#if (eq this.status "active")}}
            <span class="badge bg-success text-light">Active</span>
          {{else}}
            <span class="badge bg-danger text-light">{{this.status}}</span>
          {{/if}}
        </td>
        <td>
          <div class="d-flex gap-2">
            <a href="/super-admin/subscriptions/edit/{{this._id}}" class="btn btn-sm btn-outline-primary flex-grow-1">Edit</a>
            <form action="/super-admin/subscriptions/delete/{{this._id}}" method="POST" 
                  onsubmit="return confirm('Are you sure you want to delete this subscription?');" class="flex-grow-1">
              <button type="submit" class="btn btn-sm btn-outline-danger w-100">Delete</button>
            </form>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>

{{#section "styles"}}
<link href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css" rel="stylesheet">
{{/section}}

{{#section "scripts"}}
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
<script>
  $(document).ready(function () {
    $('#subscriptionTable').DataTable({
      responsive: true,
      scrollX: true,
      pageLength: 10,
      columnDefs: [
        { orderable: false, targets: -1 } // Disable ordering on Actions column
      ]
    });
  });
</script>
{{/section}}
