<div class="container-fluid py-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Create Subscription</h1>
    <a href="/super-admin/subscriptions" class="btn btn-secondary">Back to List</a>
  </div>

  {{> flashMessages}}

  <form action="/super-admin/subscriptions/create" method="POST">
    <div class="row g-3">

      <div class="col-md-6">
        <label for="school" class="form-label">School <span class="text-danger">*</span></label>
        <select name="school" id="school" class="form-select" required>
          <option value="">-- Select School --</option>
          {{#each schools}}
            <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="col-md-6">
        <label for="plan" class="form-label">Plan <span class="text-danger">*</span></label>
        <select name="plan" id="plan" class="form-select" required>
          <option value="">-- Select Plan --</option>
          {{#each plans}}
            <option value="{{this._id}}">{{this.name}} ({{this.price}} {{this.circle}} {{../settings.general.currency}})</option>
          {{/each}}
        </select>
      </div>

      <div class="col-md-6">
        <label for="paymentMethod" class="form-label">Payment Method <span class="text-danger">*</span></label>
        <select name="paymentMethod" id="paymentMethod" class="form-select" required>
          <option value="manual">Manual</option>
          <option value="card" disabled>Card</option>
          <option value="paypal" disabled>PayPal</option>
        </select>
      </div>

      <div class="col-md-6">
        <label for="payerEmail" class="form-label">Payer Email</label>
        <input type="email" name="payerEmail" id="payerEmail" class="form-control" placeholder="Optional">
      </div>

      <div class="col-md-6">
        <label for="endDate" class="form-label">End Date <span class="text-danger">*</span></label>
        <input type="text" name="endDate" id="endDate" class="form-control" required>
      </div>

      <div class="col-md-6 d-flex align-items-center mt-4">
        <div class="form-check">
          <input type="checkbox" name="autoRenew" id="autoRenew" class="form-check-input">
          <label for="autoRenew" class="form-check-label">Auto Renew</label>
        </div>
      </div>

      <div class="col-12">
        <label for="notes" class="form-label">Notes</label>
        <textarea name="notes" id="notes" class="form-control" rows="3"></textarea>
      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-primary">Create Subscription</button>
      </div>

    </div>
  </form>
</div>

{{#section "styles"}}
<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{{/section}}

{{#section "scripts"}}
<!-- Flatpickr JS -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  // Initialize Flatpickr on End Date field
  flatpickr("#endDate", {
    dateFormat: "Y-m-d",
    minDate: "today"
  });
</script>
{{/section}}
