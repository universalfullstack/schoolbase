<div class="container-fluid py-5">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <h1 class="h3 mb-0">Create Subscription</h1>
    <a href="/super-admin/subscriptions" class="btn btn-secondary">Back to List</a>
  </div>

  {{> flashMessages}}

  <form action="/super-admin/subscriptions/create" method="POST">
    <div class="row g-3">

      <!-- School -->
      <div class="col-12 col-md-6">
        <label for="school" class="form-label">School <span class="text-danger">*</span></label>
        <select name="school" id="school" class="form-select" required>
          <option value="">-- Select School --</option>
          {{#each schools}}
            <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Plan -->
      <div class="col-12 col-md-6">
        <label for="plan" class="form-label">Plan <span class="text-danger">*</span></label>
        <select name="plan" id="plan" class="form-select" required>
          <option value="">-- Select Plan --</option>
          {{#each plans}}
            <option value="{{this._id}}">
              {{this.name}} ({{this.price}} {{this.currency}})
            </option>
          {{/each}}
        </select>
      </div>

      <!-- Payment Method -->
      <div class="col-12 col-md-6">
        <label for="paymentMethod" class="form-label">Payment Method <span class="text-danger">*</span></label>
        <select name="paymentMethod" id="paymentMethod" class="form-select" required>
          <option value="manual">Manual</option>
          <option value="card" disabled>Card</option>
          <option value="paypal" disabled>PayPal</option>
        </select>
      </div>

      <!-- Payer Email -->
      <div class="col-12 col-md-6">
        <label for="payerEmail" class="form-label">Payer Email</label>
        <input type="email" name="payerEmail" id="payerEmail" class="form-control" placeholder="Optional">
      </div>

      <!-- End Date -->
      <div class="col-12 col-md-6">
        <label for="endDate" class="form-label">End Date <span class="text-danger">*</span></label>
        <input type="text" name="endDate" id="endDate" class="form-control" placeholder="YYYY-MM-DD" required>
      </div>

      <!-- Auto Renew -->
      <div class="col-12 col-md-6 d-flex align-items-center mt-3 mt-md-0">
        <div class="form-check">
          <input type="checkbox" name="autoRenew" id="autoRenew" class="form-check-input">
          <label for="autoRenew" class="form-check-label">Auto Renew</label>
        </div>
      </div>

      <!-- Notes -->
      <div class="col-12">
        <label for="notes" class="form-label">Notes</label>
        <textarea name="notes" id="notes" class="form-control" rows="3" placeholder="Optional notes"></textarea>
      </div>

      <!-- Submit -->
      <div class="col-12">
        <button type="submit" class="btn btn-primary w-100">Create Subscription</button>
      </div>

    </div>
  </form>
</div>

{{#section "styles"}}
<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{{/section}}

{{#section "scripts"}}
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {

    const planSelect = document.getElementById('plan');
    const endDateInput = document.getElementById('endDate');

    // Initialize flatpickr
    const fp = flatpickr(endDateInput, {
      dateFormat: 'Y-m-d',
      minDate: 'today',
      allowInput: true
    });

    // Helper to add months or years
    function calculateEndDate(cycle) {
      const start = new Date();
      const end = new Date(start);

      if (cycle === 'monthly') {
        end.setMonth(end.getMonth() + 1);
      }

      if (cycle === 'yearly') {
        end.setFullYear(end.getFullYear() + 1);
      }

      return end;
    }

    // When plan changes â†’ auto set end date
    planSelect.addEventListener('change', function () {
      const selectedOption = this.options[this.selectedIndex];
      const billingCycle = selectedOption.dataset.cycle;

      if (!billingCycle) return;

      const endDate = calculateEndDate(billingCycle);
      fp.setDate(endDate, true);
    });

  });
</script>
{{/section}}
