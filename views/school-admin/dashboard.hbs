<div class="container-fluid py-4">

  <!-- ================== STATISTICS CARDS ================== -->
  <div class="row g-3 mb-4">

    <!-- Total Students -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm text-white p-3" style="background-color: #5a9bd4;">
        <div class="d-flex align-items-center">
          <i class="bi bi-people-fill fs-2 me-3"></i>
          <div>
            <h6>Total Students</h6>
            <h3>{{stats.totalStudents}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Staff -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm text-white p-3" style="background-color: #4caf7f;">
        <div class="d-flex align-items-center">
          <i class="bi bi-person-badge fs-2 me-3"></i>
          <div>
            <h6>Total Staff</h6>
            <h3>{{stats.totalStaff}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Guardians -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm text-white p-3" style="background-color: #f4c26b;">
        <div class="d-flex align-items-center">
          <i class="bi bi-person-lines-fill fs-2 me-3"></i>
          <div>
            <h6>Total Guardians</h6>
            <h3>{{stats.totalGuardians}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Invoices -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm text-white p-3" style="background-color: #f79e6b;">
        <div class="d-flex align-items-center">
          <i class="bi bi-file-earmark-text fs-2 me-3"></i>
          <div>
            <h6>Total Invoices</h6>
            <h3>{{stats.totalInvoices}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Revenue -->
    <div class="col-sm-12 col-md-6 col-lg-3">
      <div class="card shadow-sm text-white p-3" style="background-color: #9370db;">
        <div class="d-flex align-items-center">
          <i class="bi bi-currency-dollar fs-2 me-3"></i>
          <div>
            <h6>Total Revenue</h6>
            <h3>₦{{stats.totalRevenue}}</h3>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- ================== LATEST PAYMENTS ================== -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="mb-3">Latest Payments</h5>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Student</th>
              <th>Invoice</th>
              <th>Amount</th>
              <th>Date</th>
              <th>Method</th>
            </tr>
          </thead>
          <tbody>
            {{#each latestPayments}}
            <tr>
              <td>{{this.student}}</td>
              <td>{{this.invoice}}</td>
              <td>₦{{this.amount}}</td>
              <td>{{this.date}}</td>
              <td>{{this.method}}</td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">No payments yet</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- ================== REVENUE TREND CHART ================== -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="mb-3">Revenue Trend (Last 6 Months)</h5>
      <canvas id="revenueChart" height="100"></canvas>
    </div>
  </div>

</div>

<!-- ================== CHART.JS ================== -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const ctx = document.getElementById('revenueChart');

new Chart(ctx, {
  type: 'line',
  data: {
    labels: {{{trendLabels}}},
    datasets: [{
      label: 'Revenue',
      data: {{{trendData}}},
      borderColor: '#5a9bd4',
      backgroundColor: 'rgba(90,155,212,0.1)',
      tension: 0.4,
      fill: true
    }]
  },
  options: {
    responsive: true,
    plugins: {
      legend: {
        display: false
      }
    },
    scales: {
      y: {
        beginAtZero: true
      }
    }
  }
});
</script>
