<div class="container-fluid py-4">

  <!-- ================== STATISTICS CARDS ================== -->
  <div class="row g-3 mb-4">

  <div class="mb-4">
    <h1 class="display-6 fw-semibold">
      {{user.role}} Dashboard
    </h1>
  </div>

  {{#unless user.emailVerified}}
    <div class="alert alert-warning d-flex align-items-center mb-4">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      Email not verified
    </div>
  {{/unless}}

    <!-- Total Students -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm bg-primary bg-opacity-10 border-0 p-3 h-100">
        <div class="d-flex align-items-center">
          <i class="bi bi-people-fill fs-2 me-3"></i>
          <div>
            <h6 class="mb-1">Total Students</h6>
            <h3 class="mb-0">{{stats.totalStudents}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Staff -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm bg-success bg-opacity-10 border-0 p-3 h-100">
        <div class="d-flex align-items-center">
          <i class="bi bi-person-badge-fill fs-2 me-3"></i>
          <div>
            <h6 class="mb-1">Total Staff</h6>
            <h3 class="mb-0">{{stats.totalStaff}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Guardians -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm bg-warning bg-opacity-10 border-0 p-3 h-100">
        <div class="d-flex align-items-center">
          <i class="bi bi-person-lines-fill fs-2 me-3"></i>
          <div>
            <h6 class="mb-1">Total Guardians</h6>
            <h3 class="mb-0">{{stats.totalGuardians}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Invoices -->
    <div class="col-sm-6 col-md-3">
      <div class="card shadow-sm bg-info bg-opacity-10 border-0 p-3 h-100">
        <div class="d-flex align-items-center">
          <i class="bi bi-file-earmark-text-fill fs-2 me-3"></i>
          <div>
            <h6 class="mb-1">Total Invoices</h6>
            <h3 class="mb-0">{{stats.totalInvoices}}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Revenue -->
    <div class="col-sm-12 col-md-6 col-lg-3">
      <div class="card shadow-sm bg-secondary bg-opacity-10 border-0 p-3 h-100">
        <div class="d-flex align-items-center">
          <i class="bi bi-cash-coin fs-2 me-3"></i>
          <div>
            <h6 class="mb-1">Total Revenue</h6>
            <h3 class="mb-0">₦{{stats.totalRevenue}}</h3>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- ================== LATEST PAYMENTS ================== -->
  <div class="card shadow-sm mb-4 border-0">
    <div class="card-body">
      <h5 class="mb-3">
        <i class="bi bi-clock-history me-2"></i>
        Latest Payments
      </h5>

      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-light">
            <tr>
              <th>Student</th>
              <th>Invoice</th>
              <th>Amount</th>
              <th>Date</th>
              <th>Method</th>
            </tr>
          </thead>
          <tbody>
            {{#each latestPayments}}
            <tr>
              <td>{{this.student}}</td>
              <td>{{this.invoice}}</td>
              <td>₦{{this.amount}}</td>
              <td>{{this.date}}</td>
              <td>{{this.method}}</td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center text-muted">
                No payments yet
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- ================== REVENUE TREND ================== -->
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <h5 class="mb-3">
        <i class="bi bi-graph-up-arrow me-2"></i>
        Revenue Trend (Last 6 Months)
      </h5>
      <canvas id="revenueChart" height="110"></canvas>
    </div>
  </div>

</div>

<!-- ================== CHART.JS ================== -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const ctx = document.getElementById('revenueChart');

new Chart(ctx, {
  type: 'line',
  data: {
    labels: {{{trendLabels}}},
    datasets: [{
      label: 'Revenue',
      data: {{{trendData}}},
      borderColor: '#0d6efd',
      backgroundColor: 'rgba(13,110,253,0.1)',
      tension: 0.4,
      fill: true
    }]
  },
  options: {
    responsive: true,
    plugins: {
      legend: { display: false }
    },
    scales: {
      y: { beginAtZero: true }
    }
  }
});
</script>
