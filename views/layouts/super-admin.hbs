<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>{{title}} &mdash; {{#if settings.general.systemName}}{{settings.general.systemName}}{{else}}My School System{{/if}} Super Admin</title>

  <link href="/css/style.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body { min-height: 100vh; }

    .layout {
      display: grid;
      grid-template-columns: 220px 1fr;
      min-height: 100vh;
    }

    .sidebar {
      background: #fff;
      border-right: 1px solid #dee2e6;
      position: sticky;
      top: 0;
      height: 100vh;
      overflow-y: auto;
    }

    main.content {
      padding: 1.5rem;
      background: #f8f9fa;
      overflow-x: hidden;
    }

    .user-img {
      width: 40px;
      height: 40px;
      object-fit: cover;
      border-radius: 50%;
    }

    @media (max-width: 991.98px) {
      .layout { grid-template-columns: 1fr; }
      .sidebar { display: none; }
    }
  </style>

  {{{_sections.styles}}}
</head>

<body class="bg-light">

<header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
  <div class="container-fluid d-flex justify-content-between align-items-center">

    <div class="d-flex align-items-center">
      <button class="btn btn-outline-primary d-lg-none me-2"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#mobileSidebar">
        <i class="bi bi-list"></i>
      </button>

      <a href="/" class="navbar-brand fw-bold text-dark">
        {{settings.general.systemName}}
      </a>
    </div>

    <div class="dropdown">
      <a class="d-flex align-items-center text-decoration-none dropdown-toggle"
         href="#"
         data-bs-toggle="dropdown">
        <img src="{{user.profileImage}}" class="user-img me-2">
        <span class="d-none d-md-inline">{{user.firstName}} {{user.lastName}}</span>
      </a>

      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="/super-admin/profile">Profile</a></li>
        <li><a class="dropdown-item" href="/super-admin/settings">Settings</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
      </ul>
    </div>

  </div>
</header>

<div class="layout">
  <!-- Desktop Sidebar -->
  <nav class="sidebar d-none d-lg-flex flex-column p-3">
    <div class="d-flex align-items-center mb-4">
      <img src="{{user.profileImage}}" class="user-img me-2">
      <div>
        <div>{{user.firstName}} {{user.lastName}}</div>
        <small class="text-muted">{{user.role}}</small>
      </div>
    </div>

    {{> super-admin-navLinks }}

    <div class="mt-auto text-muted small">
      &copy; {{year}} {{school.name}}
    </div>
  </nav>

  <!-- Main -->
  <main class="content">
    {{{body}}}
  </main>
</div>

<!-- Mobile Sidebar -->
<div class="offcanvas offcanvas-start d-lg-none" id="mobileSidebar">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">{{school.name}}</h5>
    <button class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>

  <div class="offcanvas-body p-0">
    <nav class="sidebar d-flex flex-column p-3 border-0">
      <div class="d-flex align-items-center mb-4">
        <img src="{{user.profileImage}}" class="user-img me-2">
        <div>
          <div>{{user.firstName}} {{user.lastName}}</div>
          <small class="text-muted">{{user.role}}</small>
        </div>
      </div>

      {{> super-admin-navLinks }}
    </nav>
  </div>
</div>

<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>
{{{_sections.scripts}}}
</body>
</html>
